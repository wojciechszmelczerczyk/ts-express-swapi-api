generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Film {
  id           Int      @id @default(autoincrement())
  title        String
  release_date String
  characters   String[]
  listId       Int
  filmList     FilmList @relation(fields: [listId], references: [id])

  @@unique([listId, title], map: "filmTitle")
}

model FilmList {
  id    Int    @id @default(autoincrement())
  name  String @unique
  films Film[]
}
